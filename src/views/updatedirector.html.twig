{% extends "base.html.twig" %}

{% block title %}Update director
{% endblock %}

{% block content %}

	<h1>Update director</h1>
	<form action="updateDirector" method="post">
		<label for="first_name">First name</label>
		<input type="text" name="first_name" id="first_name" value="{{ director.firstname }}">
		<br>
		<label for="last_name">Last name</label>
		<input type="text" name="last_name" id="last_name" value="{{ director.lastname }}">
		<br>
		<input type="submit" value="Update">
	</form>
	<br>
{% endblock %}
